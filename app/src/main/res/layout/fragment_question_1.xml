<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_yellow"
    android:weightSum="1"
    tools:context=".Question_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="@color/green_text"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/upperPage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/former_page"
                android:background="@color/green_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="喜好問答"
                android:textSize="30sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="95dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Q: 較偏好的景點類型?
                               (至多三項)"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginVertical="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.53">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/landscape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center">

        <Button
            android:id="@+id/Q1_nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_text"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <ImageButton
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/calendar"
            android:background="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/rcmd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/like"
            android:background="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/home_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:background="@color/white"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/exam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/search_2" />

        <ImageButton
            android:id="@+id/user_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/user"
            android:background="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>



</LinearLayout>