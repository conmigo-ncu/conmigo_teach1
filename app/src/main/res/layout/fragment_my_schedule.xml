<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".my_schedule"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="1"
        android:background="#f9f7e8">
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONMIGO"
                android:textSize="30sp"
                android:textColor="#62bfad"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_fab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:layout_margin="0dp"
            android:background="#F9F7E8"
            android:orientation="vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/basic_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/calendar"
                android:background="@color/white"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/rcmd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/like"
                android:background="@color/white"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/home_page"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/home"
                android:background="@color/white"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/exam"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/search_2" />

            <ImageButton
                android:id="@+id/user_page"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/user"
                android:background="@color/white"
                android:layout_weight="1"/>
        </LinearLayout>



    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_sch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/plus"
        app:backgroundTint="#62BFAD"
        app:layout_anchor="@id/menu_fab"
        app:layout_anchorGravity="bottom|right">

    </android.support.design.widget.FloatingActionButton>

</android.support.design.widget.CoordinatorLayout>